{
  "scripts": {
    "dev": ". ./config/development/env.sh && meteor --settings ./config/development/settings.json -p $MPORT",
    "pretest": "npm run lint --silent",
    "tests": "meteor test --driver-package practicalmeteor:mocha",
    "test-app-watch": "meteor test --full-app --driver-package practicalmeteor:mocha",
    "lint": "eslint .",
    "production": "meteor --settings settings-production.json"
  },
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "aws-sdk": "^2.138.0",
    "babel-runtime": "^6.18.0",
    "bcrypt": "^0.8.7",
    "faker": "^3.0.1",
    "hammerjs": "^2.0.8",
    "http-proxy": "^1.16.2",
    "imap": "^0.8.19",
    "kurento-client": "^6.6.0",
    "lodash": "4.12.0",
    "meteor-node-stubs": "^0.3.2",
    "moment": "2.29.2",
    "socket.io-client": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^2.3.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-meteor": "^3.0.1",
    "eslint-plugin-react": "^4.0.0",
    "autoprefixer": "^6.3.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
